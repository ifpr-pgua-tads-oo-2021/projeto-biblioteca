<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>


<VBox xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      prefHeight="400.0" prefWidth="600.0" 
      spacing="5.0" fx:controller="ifpr.pgua.eic.biblioteca.telas.CadastroAutor">

    <padding>
        <Insets top="10.0" bottom="10.0" left="10.0" right="10.0"/>
    </padding>

    <Label text="Nome:" labelFor="$tfNome" />
    <TextField fx:id="tfNome"/>

    <Label text="Email:" labelFor="$tfEmail"/>
    <TextField fx:id="tfEmail"/>
    
    <Label text="Cpf:" labelFor="$tfCpf"/>
    <TextField fx:id="tfCpf"/>
    
    <HBox spacing="5.0">
        <Button text="Adicionar" onAction="#cadastrar"/>
        <Button text="Limpar" onAction="#limpar"/>
    </HBox>
        
</VBox>